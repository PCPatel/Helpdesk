<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="area">@RenderBody()</div>
    @if (Request.IsAuthenticated)
    {
        <nav class="main-menu">
            <ul>
                <li style="color:#fff;white-space:nowrap;">
                    @*@(Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")*@
                    @{

                        var identity = (HttpContext.Current.User as Helpdesk.Infrastructure.MyPrincipal).Identity as Helpdesk.Infrastructure.MyIdentity;
                        @*<text>@string.Format("Hello {0}", identity.User.Name)</text>*@
                        <img src="~/Content/images/P2015.jpg" class="img-circle img-responsive" style="margin-left:10px;width:40px;display:inline;" />
                        <span class="nav-text" style="display:inline;margin-left:5px;">
                            @identity.User.Name
                        </span>
                    }

                </li>
                <li>
                    <a href="/">
                        <i class="fa fa-home fa-2x"></i>
                        <span class="nav-text">
                            Home
                        </span>
                    </a>
                </li>
                <li>
                    <a href="/Home/Contact">
                        <i class="fa fa-home fa-2x"></i>
                        <span class="nav-text">
                            Contact
                        </span>
                    </a>
                </li>
                <li>
                    <a href="/Home/About">
                        <i class="fa fa-home fa-2x"></i>
                        <span class="nav-text">
                            About
                        </span>
                    </a>
                </li>

            </ul>

            <ul class="logout">
                <li>
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("Logout", "MyAccount", FormMethod.Post, new { id = "logoutForm", style = "display:none;" }))
                        { }
                        <a href="javascript:document.getElementById('logoutForm').submit();">
                            <i class="fa fa-power-off fa-2x"></i>
                            <span class="nav-text">
                                Logout
                            </span>
                        </a>

                    }
                </li>
            </ul>
        </nav>
                        }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>